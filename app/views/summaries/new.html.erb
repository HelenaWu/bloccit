<h1>Create a new Summary</h1>

<div class="row">
  <div class="col-md-8">

    <%= form_for :summary, url: topic_post_summary_path(@topic, @post) do |f| %>
      <div class="form-group">
        <%= f.label :content%>
        <%= f.text_field :content, class: "form-control", placeholder: "Enter your summary." %>
      </div>
      <%= f.submit "save", class: "btn btn-success"%>
    <% end %>
  </div>
</div>
