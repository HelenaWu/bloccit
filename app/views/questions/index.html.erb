<h1>All Questions</h1>
<% @questions.each do |question| %>
  <p>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">

        <%= link_to question.title, question %> 
          Resolved:<%= check_box_tag 'Resolved', 0, question.resolved?, disabled: true %>
        </h4>

      </div>
    </div>

  </p>
<% end %>
