<h1>All Questions</h1>
<% @questions.each do |question| %>
  <p>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">

        <%= link_to question.title, question %> 
          Resolved:<% if question.resolved%>
          <input type="checkbox" name="resolved" value = '0' disabled checked/>
          <% else %>
          <input type="checkbox" name="resolved" value = '0' disabled  />
          <%end %>
        </h4>

      </div>
    </div>

  </p>
<% end %>
